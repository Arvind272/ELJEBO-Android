<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical">

            <include
                android:id="@+id/questionsLL"
                layout="@layout/service_detail_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_12sdp">

                <com.eljebo.common.utils.CustomTextView
                    android:id="@+id/customTextViewMsgBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTop="@mipmap/ic_msg_small"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/message"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_14sp" />

                <com.eljebo.common.utils.CustomTextView
                    android:id="@+id/customTextViewCallBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTop="@mipmap/ic_call_small"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/call"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_14sp" />

                <com.eljebo.common.utils.CustomTextView
                    android:id="@+id/customTextViewVideoCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTop="@mipmap/ic_video"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/video_chat"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5sdp">

                    <com.eljebo.common.utils.CustomTextView
                        android:id="@+id/startTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/button_selector_theme_color"
                        android:paddingBottom="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_22sdp"
                        android:paddingStart="@dimen/_22sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:text="@string/start"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_18sp" />
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/timerOnIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@mipmap/ic_timer_off" />

                <com.eljebo.common.utils.CustomTextView
                    android:id="@+id/timerTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/_00_00_00"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_18sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</layout>