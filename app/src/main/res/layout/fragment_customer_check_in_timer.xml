<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/editTextBackGround"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <com.eljebo.common.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/total_check_in_time_to_finish_the_service"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/minutesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/Black"
                android:textSize="@dimen/_17sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_20sdp">

            <com.eljebo.common.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:text="@string/extra_time_taken"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_17sp" />

            <com.eljebo.common.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:text="@string/_5mins"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp">

            <com.eljebo.common.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:text="@string/extra_amount"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_17sp" />

            <com.eljebo.common.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:text="@string/_5"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_17sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/editTextBackGround" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp">

            <com.eljebo.common.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:text="@string/total_amount"
                android:textColor="@color/Black"
                android:textSize="@dimen/_20sp" />

            <com.eljebo.common.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:text="@string/_5"
                android:textColor="@color/Black"
                android:textSize="@dimen/_20sp" />

        </RelativeLayout>

        <com.eljebo.common.utils.CustomButton
            android:id="@+id/payBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_selector_theme_color"
            android:text="@string/pay"
            android:theme="@style/primaryButtonTheme" />

    </LinearLayout>
</layout>