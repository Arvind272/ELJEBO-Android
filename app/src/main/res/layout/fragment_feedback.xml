<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/meal_image_order"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@mipmap/ic_pic_home" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <com.eljebo.common.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Jack Thomas"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_16sdp" />


                <com.eljebo.common.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#123 Lorem ipsum, Amet, USA,\n12:00pm - 12:20pm \n12 Jun, 2018"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>
        </LinearLayout>

        <com.eljebo.common.utils.CustomTextView
            android:id="@+id/dollarTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="$20"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_32sp"
            android:visibility="gone" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:theme="@style/my_rating" />

        <com.eljebo.common.utils.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/feedback_drawable"
            android:gravity="start"

            android:hint="@string/leave_a_comment"
            android:padding="@dimen/_6sdp"
            android:textColorHint="@color/DarkGray" />

        <com.eljebo.common.utils.CustomButton
            android:id="@+id/submitBT"
            style="@style/primaryButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/submit" />

    </LinearLayout>
</layout>