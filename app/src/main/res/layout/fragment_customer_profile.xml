<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/meal_image_order"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_pic_home" />

        <com.eljebo.common.utils.CustomEditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/edittext_drawbale"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@mipmap/ic_name"
            android:gravity="center_vertical"
            android:hint="@string/name"
            android:inputType="text"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/Black"
            android:textSize="@dimen/_14sp" />

        <com.eljebo.common.utils.CustomEditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edittext_drawbale"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@mipmap/ic_email"
            android:gravity="center_vertical"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/Black"
            android:textSize="@dimen/_14sp" />

        <com.eljebo.common.utils.CustomEditText
            android:id="@+id/phoneNumberET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edittext_drawbale"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@mipmap/ic_call_red"
            android:gravity="center_vertical"
            android:hint="@string/phone_number"
            android:inputType="number"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/Black"
            android:textSize="@dimen/_14sp" />

        <com.eljebo.common.utils.CustomEditText
            android:id="@+id/addressET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edittext_drawbale"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@mipmap/ic_location"
            android:gravity="center_vertical"
            android:hint="@string/address"
            android:inputType="text"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/Black"
            android:textSize="@dimen/_14sp" />

        <com.eljebo.common.utils.CustomEditText
            android:id="@+id/changePasswordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edittext_drawbale"
            android:drawableEnd="@mipmap/ic_front_arw"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@mipmap/ic_pswd"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="@string/change_password"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Black"
            android:textSize="@dimen/_14sp" />

        <com.eljebo.common.utils.CustomButton
            android:id="@+id/payBT"
            style="@style/primaryButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/save" />

    </LinearLayout>
</layout>